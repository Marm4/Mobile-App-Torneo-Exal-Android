<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CrearClubActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo equipo"
            style="@style/textStyle"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:gravity="center"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            >

            <EditText
                android:id="@+id/fecha"
                style="@style/textStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/primary"
                android:hint="Escribe aqui"
                android:paddingStart="20dp"
                android:textColorHint="@color/textColorHint"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                style="@style/textStyle"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/view_redondeado"
                android:gravity="center"
                android:text="Nombre"
                android:textStyle="normal"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equipos"
                style="@style/textStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/background"
                android:gravity="center_vertical"
                android:hint="Seleccione un archivo..."
                android:paddingStart="20dp"
                android:textColorHint="@color/textColorHint"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fecha"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                style="@style/textStyle"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:background="@drawable/view_redondeado_blanco"
                android:gravity="center"
                android:text="Escudo"
                android:textSize="10dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/equipos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent" />



            <EditText
                android:id="@+id/dia"
                style="@style/textStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/primary"
                android:hint="Escribe aqui"
                android:paddingStart="20dp"
                android:textColorHint="@color/textColorHint"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/equipos"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                style="@style/textStyle"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:background="@drawable/view_redondeado"
                android:gravity="center"
                android:text="Jugadores"
                android:textSize="10dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/dia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent" />


            <LinearLayout
                android:id="@+id/agregarLL"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/view_redondeado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/equipos">

                <ImageView
                    android:id="@+id/agregarIV"
                    android:layout_width="15dp"
                    android:layout_height="15dp"

                    app:srcCompat="@drawable/ic_agregar" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/primary"
                android:gravity="center"
                style="@style/textStyle"
                android:text="Guardar"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>