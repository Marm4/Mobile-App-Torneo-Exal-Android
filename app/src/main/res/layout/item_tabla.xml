<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/view_redondeado_gris"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/posicion"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                style="@style/textStyle"
                android:textSize="10dp"
                android:text="1"
                android:layout_gravity="center"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/escudo"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_escudo" />
            <TextView
                android:id="@+id/nombre"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                style="@style/textStyle"
                android:textSize="12dp"
                android:text="Boca Juniors"

                android:layout_gravity="center"
                android:gravity="center|left"/>

        </LinearLayout>

        <TextView
            android:id="@+id/partidos"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="P"
            android:gravity="center"
            style="@style/textStyle"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/ganados"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="G"
            android:gravity="center"
            style="@style/textStyle"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/empatados"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="E"
            android:gravity="center"
            style="@style/textStyle"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/derrota"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="D"
            android:gravity="center"
            style="@style/textStyle"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/golesF"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="GF"
            android:gravity="center"
            style="@style/textStyle"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/golesC"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="GC"
            android:gravity="center"
            android:textStyle="bold"
            style="@style/textStyle"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/golesDif"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="DIF"
            android:gravity="center"
            android:textStyle="bold"
            style="@style/textStyle"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/puntos"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:text="PTS"
            android:gravity="center"
            android:textStyle="bold"
            style="@style/textStyle"
            android:textSize="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>