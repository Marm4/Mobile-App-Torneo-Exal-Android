<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.CrearPartidoActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dia"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jueves 29/10"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/hora"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="5dp"
            android:text="17:00"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/escudoUno"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_escudo"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="78dp" />

        <TextView
            android:id="@+id/equipoUno"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Equipo1" />

        <TextView
            android:id="@+id/vs"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="vs"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/equipoDos"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Equipo2" />

        <ImageView
            android:id="@+id/escudoDos"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            app:srcCompat="@drawable/ic_escudo"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="78dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/fecha"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha 5"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:id="@+id/jugadoresUno"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Jugadores"
                style="@style/textStyle"
                android:gravity="center"
                android:background="@drawable/view_redondeado_gris"/>

            <ScrollView
                android:layout_width="190dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"

                >
                <LinearLayout
                    android:id="@+id/llUno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
            </ScrollView>


            <LinearLayout
                android:id="@+id/gol"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_redondeado_gris">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_gol" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/amarilla"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_redondeado_gris">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_amarilla" />


                </LinearLayout>

            <LinearLayout
                android:id="@+id/roja"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_redondeado_gris">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_roja" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_weight="1">


            <TextView
                android:id="@+id/jugadoresDos"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Jugadores"
                style="@style/textStyle"
                android:gravity="center"
                android:background="@drawable/view_redondeado_gris"/>

            <ScrollView
                android:layout_width="190dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"

                >
                <LinearLayout
                    android:id="@+id/llDos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
            </ScrollView>

            <LinearLayout
                android:id="@+id/golDos"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_redondeado_gris">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_gol" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/amarillaDos"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_redondeado_gris">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_amarilla" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rojaDos"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_redondeado_gris">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_roja" />


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:text="Agregar multimedia"
        style="@style/textStyle"
        android:layout_marginTop="15dp"
        android:background="@drawable/view_redondeado_gris"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center"
            android:text="Seleccionar mvp"
            style="@style/textStyle"
            android:layout_marginTop="15dp"
            android:background="@drawable/view_redondeado_gris"/>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>