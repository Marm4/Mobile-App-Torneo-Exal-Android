<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.partido.CrearPartidoActivity"
    android:background="@color/background">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_top_title"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/fecha"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Fecha 5"
                android:textColor="@color/background"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/view_redondeado_blanco"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >


                    <TextView
                        android:id="@+id/equipoUno"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:paddingEnd="2dp"
                        android:text="Equipo1"
                        android:textColor="@color/azulOscuro"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/escudoUno"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.1"
                        app:srcCompat="@drawable/ic_escudo"
                        tools:layout_editor_absoluteX="70dp"
                        tools:layout_editor_absoluteY="78dp" />

                    <TextView
                        android:id="@+id/vs"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:background="@drawable/view_redondeado_azul"
                        android:gravity="center"
                        android:text="vs"
                        android:textColor="@color/background"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/escudoDos"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="0.1"
                        app:srcCompat="@drawable/ic_escudo"
                        tools:layout_editor_absoluteX="70dp"
                        tools:layout_editor_absoluteY="78dp" />

                    <TextView
                        android:id="@+id/equipoDos"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="Equipo2"
                        android:textColor="@color/azulOscuro"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Jugadores"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">



                <ScrollView
                    android:layout_width="190dp"
                    android:layout_height="400dp"
                    android:layout_marginStart="10dp"

                    >

                    <LinearLayout
                        android:id="@+id/llUno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">



                <ScrollView
                    android:layout_width="190dp"
                    android:layout_height="400dp"
                    android:layout_marginEnd="10dp"

                    >

                    <LinearLayout
                        android:id="@+id/llDos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </ScrollView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/view_top_title"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">




            <ImageView
                android:id="@+id/gol"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"

                android:background="@drawable/view_redondeado_gris"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/ic_gol" />

                <ImageView
                    android:id="@+id/mvp"
                    style="@style/textStyle"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/view_redondeado_gris"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_mvp" />


        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/amarilla"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"

                    android:background="@drawable/view_redondeado_gris"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:srcCompat="@drawable/ic_amarilla" />

                <ImageView
                    android:id="@+id/roja"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/view_redondeado_gris"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:srcCompat="@drawable/ic_roja" />


            </LinearLayout>





    </LinearLayout>


</LinearLayout>



    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:text="Agregar multimedia"
        style="@style/textStyle"
        android:layout_marginTop="15dp"
        android:background="@drawable/view_redondeado_gris"
        android:visibility="gone"/>






</androidx.constraintlayout.widget.ConstraintLayout>